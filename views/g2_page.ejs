<!DOCTYPE html>
<html lang="en">
  <!-- Header -->
  <%- include('layouts/header'); -%>
  <body>
    <!-- Navbar -->
    <%- include('layouts/navbar'); -%>

    <!-- Main Content -->
    <main class="g2-main-div-style">
      <div class="background-container">
        <div class="overlay-style"></div>
        <div class="content-wrapper">
          <!-- Introductory Text -->
          <div class="intro-text text-center">
            <h1>Welcome to the G2 Test Booking Portal</h1>
            <h3>
              Prepare for your G2 driving test by submitting your personal and
              vehicle details. Let's get started!
            </h3>
          </div>
        </div>
      </div>

      <!-- Main Form Container -->
      <div class="g2-main-container">
        <div class="g2-container">
          <h2 class="text-center">G2 Test Booking Form</h2>

          <!-- G2 Test Booking Form -->
          <form
            class="g2-test-form"
            id="g2Form"
            action="/g2"
            method="POST"
            novalidate
          >
            <!-- Personal Information Section -->
            <div class="section">
              <h2>Personal Information</h2>
              <div class="form-group">
                <label for="firstName"
                  >First Name <span class="required">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="firstName"
                  name="firstName"
                  placeholder="John"
                  required
                />
                <span id="firstNameError" class="error-message"></span>
              </div>

              <div class="form-group">
                <label for="lastName"
                  >Last Name <span class="required">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="lastName"
                  name="lastName"
                  placeholder="Doe"
                  required
                />
                <span id="lastNameError" class="error-message"></span>
              </div>

              <div class="form-group">
                <label for="licenseNumber"
                  >License Number <span class="required">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="licenseNumber"
                  name="licenseNumber"
                  placeholder="A1234-56789-12345"
                  minlength="17"
                  maxlength="17"
                  pattern="[A-Za-z]\d{4}-\d{5}-\d{5}"
                  title="License number must be exactly 15 alphanumeric characters."
                  required
                />
                <span id="licenseError" class="error-message"></span>
              </div>

              <div class="form-group">
                <label for="age">Age <span class="required">*</span></label>
                <input
                  type="text"
                  class="form-control"
                  id="age"
                  name="age"
                  placeholder="25"
                  required
                />
                <span id="ageError" class="error-message"></span>
              </div>

              <div class="form-group">
                <label for="dob"
                  >Date of Birth <span class="required">*</span></label
                >
                <input
                  type="date"
                  class="form-control"
                  id="dob"
                  name="dob"
                  required
                />
                <span id="dobError" class="error-message"></span>
              </div>
            </div>

            <!-- Car Information Section -->
            <div class="section mt-4">
              <h2>Car Information</h2>
              <div class="form-group">
                <label for="carMake"
                  >Car Make <span class="required">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="carMake"
                  name="make"
                  placeholder="Mercedes-Maybach"
                  required
                />
                <span id="carMakeError" class="error-message"></span>
              </div>

              <div class="form-group">
                <label for="carModel"
                  >Car Model <span class="required">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="carModel"
                  name="model"
                  placeholder="4MATXXX"
                  required
                />
                <span id="carModelError" class="error-message"></span>
              </div>

              <div class="form-group">
                <label for="carYear"
                  >Car Year <span class="required">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="carYear"
                  name="year"
                  placeholder="2024"
                  min="1900"
                  max="2024"
                  required
                />
                <span id="carYearError" class="error-message"></span>
              </div>

              <div class="form-group">
                <label for="plateNumber"
                  >Plate Number <span class="required">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="plateNumber"
                  name="plateNumber"
                  placeholder="1HGTXXX"
                  required
                />
                <span id="plateError" class="error-message"></span>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="text-center mt-3">
              <button type="submit" class="button">Submit Request</button>
            </div>
          </form>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <%- include('layouts/footer'); -%> <%- include('layouts/scripts'); -%>
    <script src="/js/scripts.js"></script>
  </body>
</html>
