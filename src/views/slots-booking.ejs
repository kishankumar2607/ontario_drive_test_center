<!DOCTYPE html>
<html lang="en">
  <!-- Header -->
  <%- include('layouts/header'); -%>
  <body>
    <!-- Navbar -->
    <%- include('layouts/navbar'); -%>

    <!-- Main Content -->
    <main class="slots-container container">
      <div class="header-section">
        <h1 class="text-center">Available Appointment Slots</h1>
        <h4 class="text-center">
          Choose a convenient date and time slot for your test and save it.
        </h4>
      </div>

      <!-- Flash Messages -->
      <% if (messages && (messages.success || messages.error)) { %> <% if
      (messages.success && messages.success.length > 0) { %>
      <div class="alert alert-success"><%= messages.success %></div>
      <% } %> <% if (messages.error && messages.error.length > 0) { %>
      <div class="alert alert-danger"><%= messages.error %></div>
      <% } %> <% } %>

      <!-- Date Selection -->
      <div class="date-selection">
        <div class="form-group">
          <label for="appointmentDate"
            >Select Date <span class="required">*</span></label
          >
          <input
            type="date"
            class="form-control"
            id="appointmentDate"
            name="appointmentDate"
            min="<%= new Date().toISOString().split('T')[0] %>"
            required
          />
          <span id="appointmentDateError" class="error-message"></span>
        </div>

        <div class="form-group mt-4">
          <label for="availableSlots"
            >Available Slots <span class="required">*</span></label
          >
          <select
            class="form-control"
            id="availableSlots"
            name="appointmentId"
            required
          >
            <option value="">-- Select a time slot --</option>
          </select>
          <span id="slotError" class="error-message"></span>
        </div>

        <div class="mt-4 text-center">
          <button id="saveAppointmentButton" class="btn btn-primary" disabled>
            Save Appointment
          </button>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <%- include('layouts/footer'); -%> <%- include('layouts/scripts'); -%>
    <script src="/js/slotsBooking.js"></script>
  </body>
</html>
